<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
    <system.serviceModel>

      <behaviors>
        <serviceBehaviors>
          <behavior name="meta">
            <serviceMetadata />
          </behavior>
        </serviceBehaviors>
      </behaviors>
      
        <services>          
            <service name="Server.ClientService" behaviorConfiguration="meta">
              <endpoint address="mex" binding="mexTcpBinding" contract="IMetadataExchange" />
                <endpoint address="" binding="netTcpBinding" contract="ClientsLibrary.IClientService" />
                <host>
                    <baseAddresses>
                        <add baseAddress="net.tcp://localhost:8098/ClientService/" />
                    </baseAddresses>
                </host>
            </service>
        </services>

      
    </system.serviceModel>
  <connectionStrings>
    <add name="ClientsDB"
         connectionString="Data Source=(LocalDB)\v11.0;AttachDbFilename=|DataDirectory|\ClientsDB.mdf;Integrated Security=True"/>
  </connectionStrings>
</configuration>